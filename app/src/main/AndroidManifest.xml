<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.personalbudgetingapp">

    <application
        android:allowBackup="true"
        android:icon="@drawable/applogo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/applogo"
        android:supportsRtl="true"
        android:theme="@style/Theme.PersonalBudgetingApp">
        <activity android:name=".ui.AccountActivity"></activity>
        <activity android:name=".ui.HistoryActivity" />
        <activity android:name=".ui.MonthlyAnalyticsActivity" />
        <activity android:name=".ui.WeeklyAnalyticsActivity" />
        <activity android:name=".ui.DailyAnalyticsActivity" />
        <activity android:name=".ui.ChooseAnalyticActivity" />
        <activity android:name=".ui.WeekSpendingActivity" />
        <activity android:name=".ui.TodaySpendingActivity" />
        <activity android:name=".ui.BudgetActivity" />
        <activity android:name=".ui.MainActivity" />
        <activity android:name=".ui.RegistrationActivity" />
        <activity android:name=".ui.LoginActivity" />
        <activity android:name=".ui.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>